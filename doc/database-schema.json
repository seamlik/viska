{
  "$schema": "http://json-schema.org/draft/2019-09/schema#",
  "$id": "https://viska.local/database-schema.json",
  "description": "Best effort to describe the database schema. No need to implement them as is as it only acts as a reference. However, this is the only source of truth for the entity definitions.",
  "definitions": {
    "Bytes": {
      "type": "array",
      "items": {
        "type": "integer"
      }
    },
    "AccountId": {
      "type": "string",
      "format": "hex"
    },
    "Blob": {
      "type": "object",
      "properties": {
        "mime": {
          "type": "string"
        },
        "content": { "$ref": "#/definitions/Bytes" }
      }
    },
    "Profile": {
      "type": "object",
      "properties": {
        "certificate": { "$ref": "#/definitions/Bytes" },
        "key": { "$ref": "#/definitions/Bytes" }
      }
    },
    "Message": {
      "type": "object",
      "properties": {
        "content": { "$ref": "#/definitions/Blob" },
        "sender": { "$ref": "#/definitions/AccountId" },
        "time": {
          "type": "string",
          "format": "date-time"
        },
        "recipients": {
          "type": "array",
          "item": { "$ref": "#/definitions/AccountId" },
          "description": "Includes the sender"
        }
      }
    },
    "Chatroom": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "members": {
          "type": "array",
          "item": { "$ref": "#/definitions/AccountId" }
        }
      }
    },
    "Peer": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Custom name given by the user"
        },
        "id": { "$ref": "#/definitions/AccountId" },
        "role": {
          "type": "integer",
          "description": "Positive number or 0 indicates a friend, negative number indicates blocked account."
        }
      }
    },
    "Vcard": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "id": { "$ref": "#/definitions/AccountId" },
        "timeUpdated": {
          "type": "string",
          "format": "date-time",
          "description": "Used to compare with the remote peer and decide whether to fetch an updated Vcard"
        },
        "photo": { "$ref": "#/definitions/Blob" }
      }
    }
  }
}
